@startuml ATM_Technician_StateMachine
skinparam monochrome true
skinparam shadowing false
skinparam dpi 150

[*] --> NoAccess

state NoAccess {
    [*] --> Idle : Нет доступа
    Idle --> Authenticated : Карта техника (16 цифр) + PIN
}

state Authenticated {
    Authenticated --> TechMenu : Доступ разрешён
}

state TechMenu {
    [*] --> Available
    Available --> RetrieveCards : 1. Извлечение удержанных карт
    Available --> Reboot : 2. Перезагрузка
    RetrieveCards --> Available : Завершено
    Reboot --> Available : Перезагрузка завершена
}

state TechnicianEnding {
    [*] --> Logout : 3. Exit
    Logout --> NoAccess : Выход
}

TechMenu --> TechnicianEnding : 3. Exit

@enduml
